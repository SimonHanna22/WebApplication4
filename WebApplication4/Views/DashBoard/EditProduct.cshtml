@model Product
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form method="post" asp-action="EditProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           value="@Model.Name"
                           placeholder="" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Description" for="" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                             
                              placeholder=""> @Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" for="" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           value="@Model.Quantity"
                           class="form-control"
                           placeholder="">                               <span asp-validation-for="Quantity" class="text-danger"></span>
                    </input>
                  

                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" for="" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Price"
                           value="@Model.Price"
                           class="form-control"
                           placeholder="">                               <span asp-validation-for="Price" class="text-danger"></span>
                    </input>
                      </div>
