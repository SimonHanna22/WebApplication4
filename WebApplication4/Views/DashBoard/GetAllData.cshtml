@model IEnumerable<Product>
@{
    Layout = "_DashBoard";
}

<div class="untree_co-section before-footer-section">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>
            <div class="container">
              <div class="row mb-5">
           
                <form class="col-md-12" method="post">
                  <div class="site-blocks-table">
                    <table class="table">
                      <thead>
                        <tr>
                          <th class="product-Image">Image</th>
                          <th class="product-Id">Id</th>
                          <th class="product-name">Product</th>
                          <th class="product-price">Price</th>
                          <th class="product-quantity">Quantity</th>
                          <th class="product-Description">Description</th>
                          <th class="product-remove">Operation</th> 
                        </tr>
                      </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td><img src="~/images/@item.ImagePath" width="70" class="img-thumbnail"/></td>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Description</td>
                                    <td>


                                        <a class="btn btn-success" asp-action="EditProduct" asp-route-id="@item.Id" role="button">
                                            <span class="material-symbols-outlined">
                                                Edit
                                            </span>
                                        </a>
                                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id" role="button">
                                            <span class="material-symbols-outlined">
                                                Delete
                                            </span>
                                        </a>
                                    </td>

                                </tr>
                            }   
                           
                        </tbody>
                    </table>
            </form>
                </div>




        </div>
            
            

