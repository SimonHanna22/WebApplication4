@model Blogy
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="Blogs" class="row" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" for="" class="form-label">Blog Title</label>
                    <input type="text"
                           asp-for="Title"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" for="" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder="">                              
</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Author" for="" class="form-label">Blog Author</label>
                    <input type="text"
                           asp-for="Author"
                           class="form-control"
                           placeholder="">                               <span asp-validation-for="Author" class="text-danger"></span>
                    
                </div>
                
                    
